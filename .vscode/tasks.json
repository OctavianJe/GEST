{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Init gcloud CLI",
      "type":  "shell",
      "command": "${workspaceFolder}/scripts/init_gcloud.sh",
      "problemMatcher": []
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "pytest -q",
      "problemMatcher": []
    },
    {
      "label": "Generate code coverage report with missing lines",
      "type": "shell",
      "command": "pytest -q --cov=src --cov-report=term-missing tests/",
      "problemMatcher": []
    },
    {
      "label": "Ollama serve",
      "type": "shell",
      "command": "ollama serve",
      "problemMatcher": []
    },
  ]
}